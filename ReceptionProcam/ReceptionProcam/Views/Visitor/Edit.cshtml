@model ReceptionProcam.Models.clsVisitor
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <script>
        $(document).ready(function () {
            $('#Visitors').DataTable({
                
            });
        });
    </script>


</head>
<body>
    <div class="container">
        <br />
        <div style="width:90%; margin:0 auto;">
                <table class="table table-striped table-bordered dt-responsive nowrap" id="Visitors" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayName("Visitor Id")</th>
                            <th>@Html.DisplayName("Name")</th>
                            <th>@Html.DisplayName("To Meet")</th>
                            <th>@Html.DisplayName("Purpose")</th>
                            <th>
                                Action
                            </th>
                            <th>
                                Print
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.AllVisitorsDetalis)
                        {
                            <tr>
                                <td>@item.VisitorId</td>
                                <td>@item.Name</td>
                                <td>@item.ToMeet</td>
                                <td>@item.Purpose</td>
                                <td>@Html.ActionLink("Details", "EditVisitor", new { id = item.VisitorId })</td>
                                <td>@Html.ActionLink("Print", "PrintPass", new { id = item.VisitorId })</td>
                            </tr>
                        }
                    </tbody>
                </table>
        </div>
    </div>
</body>
</html>
