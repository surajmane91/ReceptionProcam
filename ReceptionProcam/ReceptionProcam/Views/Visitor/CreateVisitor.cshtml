                    <p class="help-block">@Html.ValidationMessageFor(m => m.AssetId, "", new { @class = "text-danger" })</p>
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(model => model.Form, htmlAttributes: new { })
